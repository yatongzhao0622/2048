{
  "name": "@yatongzhao0622/2048-core",
  "version": "0.0.0-development",
  "description": "Core library for the 2048 game, implemented with a functional paradigm and TypeScript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "lint": "eslint . --ext .js,.ts",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "build": "tsc -p tsconfig.json",
    "prepare": "husky install",
    "semantic-release": "semantic-release",
    "example": "NODE_OPTIONS='--loader ts-node/esm' ts-node --esm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yatongzhao0622/2048.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com/"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "keywords": [
    "2048",
    "game",
    "core",
    "logic",
    "functional",
    "typescript"
  ],
  "author": "Yatong Zhao",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/github": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "semantic-release": "^19.0.0",
    "husky": "^8.0.0",
    "typescript": "~5.1.6",
    "jest": "latest",
    "ts-jest": "latest",
    "@types/jest": "latest",
    "eslint": "^8.0.0",
    "ts-node": "^10.9.2"
  }
}
